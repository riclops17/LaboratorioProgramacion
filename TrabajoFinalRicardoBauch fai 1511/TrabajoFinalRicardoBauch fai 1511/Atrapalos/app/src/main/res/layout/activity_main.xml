<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/puntaje"
        android:layout_width="199dp"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:hint="@string/puntaje"
        android:paddingLeft="10dp"
        android:textSize="18sp" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/estrellas">

        <TextView
            android:id="@+id/botonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"

            android:hint="@string/bStart"
            android:textColor="#FF04FF"
            android:textColorHint="#FF04FF"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/box"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/box55" />

        <ImageView
            android:id="@+id/caraFeliz"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cara1"

            />

        <ImageView
            android:id="@+id/caraMala"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/cara3"

            />

        <ImageView
            android:id="@+id/caraSorprendida"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cara2"

            />
        <ImageView
            android:id="@+id/caraEnferma"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cara4"

            />
        <ImageView
            android:id="@+id/caraMaligna"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cara5"

            />


    </FrameLayout>

    

</LinearLayout>